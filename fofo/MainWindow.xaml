<Window x:Class="fofo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:fofo"
        mc:Ignorable="d"
        Title="MainWindow" Height="300" Width="800">
    <Grid>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <TextBox x:Name="num1" Grid.Column="0" TextChanged="num1_TextChanged" FontSize="32" TextWrapping='Wrap'/>
            <ComboBox x:Name="znak" Grid.Column="1" FontSize="32">
                <ComboBoxItem>+</ComboBoxItem>
                <ComboBoxItem>-</ComboBoxItem>
                <ComboBoxItem>/</ComboBoxItem>
                <ComboBoxItem>*</ComboBoxItem>
            </ComboBox>
            <TextBox x:Name="num2" Grid.Column="2" TextChanged="num1_TextChanged" FontSize="32" TextWrapping='Wrap'/>
            <Label Content="=" Grid.Column="3" FontSize="32" VerticalContentAlignment="Center" HorizontalAlignment="Center"/>
            <TextBlock x:Name="result" Grid.Column="4" FontSize="32" TextWrapping='Wrap'/>
        </Grid>
    </Grid>
</Window>
